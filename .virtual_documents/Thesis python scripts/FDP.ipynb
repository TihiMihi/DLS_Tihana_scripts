leg = ax.get_legend()
leg.set_loc('lower left')
x1, x2, y1, y2 = -0.3, 0.3, -0.05, 0
axins = ax.inset_axes([0.3,0.76,0.2,0.2], xlim=(x1, x2), ylim=(y1, y2), xticklabels=[])
